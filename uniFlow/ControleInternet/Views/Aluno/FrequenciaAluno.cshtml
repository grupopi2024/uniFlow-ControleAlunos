
@{
    ViewBag.Title = "ListarAluno";
    Layout = "~/Views/Shared/_LayoutSistema.cshtml";
}


<!-- Centered forms -->
<div class="row">
    <div class="col-md-6"></div>
    <div class="col-md-10">

        <form id="frmListarFrequencia" class="form-validate-jquery" action="#" novalidate="novalidate">
            <div class="panel panel-flat">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-md-12 col-md-offset-1">
                            <h4 class="panel-title">Controle de Frequencia</h4>
                        </div>
                    </div>
                </div>

                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-10 col-md-offset-1">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <input id="txtPesquisarControleFrequencia" type="text" class="form-control" placeholder="Pesquisar" oninput="FiltrarTabelaControleFrequencia()">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">

                                        <select id="txtTipoDePesquisaControleFrequencia" class="form-control">
                                            <option value="0">Nome</option>
                                            <option value="1">RA</option>
                                            <option value="2">Série</option>

                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <input id="txtDataParametro" class="form-control" type="date" name="txtDataParametro">
                                </div>
                                <div class="col-md-2">
                                        <button id="btnConfirmarCadastroAluno" type="button" class="btn btn-success sweet-btn" onclick="carregaControleFrequencia()">
                                            Pesquisar
                                        </button>
                                    </div>
                                </div>
                            <div class="row">

                                <!-- Scrollable table -->
                                <div id="divAlunoFrequencia" class="panel panel-flat">
                                    <div class="panel-heading">
                                        <h6 class="panel-title">Alunos</h6>
                                    </div>

                                    <div class="table-responsive pre-scrollable" style="overflow-y: auto;">
                                        <table class="table" id="tableControleFrequencia">
                                            <thead>
                                                <tr>
                                                    <th>RA</th>
                                                    <th>Nome</th>
                                                    <th>Série</th>
                                                    <th>Data Entrada</th>
                                                    <th>Data Saída</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <!-- /scrollable table -->

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<!-- /form centered -->